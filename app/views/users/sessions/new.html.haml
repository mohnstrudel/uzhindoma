%section.g-section.m-section.m-section_top-bg
  .g-wrapper
%section.g-section.c-section
  .g-wrapper
    =form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'g-form g-form_personal'}) do |f|
      / %form.g-form.g-form_personal{:action => "#", :method => "post"}
      %h2.g-form__title-center Войти
      %fieldset.g-fieldset
        .g-input-wrapper.g-input-wrapper_clear
          %label.g-form__label Номер телефона
          =f.phone_field :phone, placeholder: "Введите номер телефона", class: "g-input", id: "phone_input"
          / %input.g-input{:name => "pass_old", :placeholder => "Старый пароль", :type => "password"}/
        .g-input-wrapper.g-input-wrapper_clear
          %label.g-form__label Ваш пароль
          =f.password_field :password, placeholder: "Введите пароль", class: "g-input"
          / %input.g-input{:name => "pass_new", :placeholder => "Новый пароль", :type => "password"}/
        %a#send_sms_link.g-link Выслать пароль по СМС
      =f.submit "Войти", class: "g-btn g-btn_blue"