%main.page-content
	%section.bg-light.section-lg
		%ol.breadcrumb
			%li
				%a{:href => "index.html"} Home
			%li
				%a{:href => "#"} Elements
			%li.active Tabs & Accordions
	.section
		.container
			.row
				.col-xs-12.col-md-8.col-md-offset-2
					%section.section-inset-1
						%h2 Меню 16/05 - 20/05
						%hr
				.col-xs-12.col-md-8
					%section.section-inset-1
						/ Responsive-tabs
						.responsive-tabs.horizontal-tabs.offset-5
							%ul.resp-tabs-list
								-@categories.each do |category|
									%li.btn.btn-success-mod-1
										=category.name
							.resp-tabs-container
								-@current_menus.each do |cm|
									.text-sm-left.fadeIn.animated
										%p
											=cm.price
											=cm.daterange
											-cm.recipes.each do |recipe|
												#carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
													.carousel-inner{"data-lightbox" => "gallery", :role => "listbox"}
														.item.active
															=image_tag recipe.pictures.first.image.url
														-recipe.pictures.each do |picture|
															.item
																=link_to picture.image.url, data: {"lightbox" => "image"} do
																	=image_tag picture.image.url(:mini_thumb)
															%ul.thumbnails-carousel.clearfix
																%li
																	=image_tag picture.image.url(:mini_thumb)