#myTabs
	/ Nav tabs
	.row.uzhindoma-tabs-row
		.col-md-2
		.col-md-8
			%ul{:role => "tablist"}
				-@current_menus.each_with_index do |current_menu, index|
					%li{role: "presentation", class: "uzhindoma_tabs"}
						=link_to current_menu.category.name, "#tab-#{index}", "aria-controls" => "home", "data-toggle" => "tab", class: "btn btn-success-mod-1 btn-sm"
		.col-md-2
	/ Tab panes
	.tab-content
		-@current_menus.each_with_index do |current_menu, index|
			=content_tag(:div, id: "tab-#{index}", role: "tabpanel", class: "tab-pane") do

				.container
					.row
						.col-xs-12.col-lg-12.col-lg-offset-0
							.row.product-item
								.col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-0.text-center
									=content_tag(:div, id: "owl-gal-#{index}", class: "own-carousel", "data-lightbox" => "gallery") do
										-current_menu.recipes.each_with_index do |recipe, index|
											=link_to recipe.pictures.first.image.url, data: {lightbox: "gallery", caption: "Some Title"} do
												=image_tag recipe.pictures.first.image.url
									.isotope.masonry-gallery.row{"data-isotope-group" => "gallery", "data-isotope-layout" => "masonry", "data-lightbox" => "gallery"}
										-current_menu.recipes.each_with_index do |recipe, index|
											.thumbnail-gallery.isotope-item.col-xs-12.col-sm-6.col-md-6{"data-filter" => "type-1"}
												=link_to recipe.pictures.first.image.url, data: {lightbox: "image"} do
													=image_tag recipe.pictures.first.image.url(:mini_thumb)
													.caption.uzhindoma-menu-caption
														.caption-wrapper
															%span.icon.icon-md.icon-white.fa-search-plus
															%h6.text-white.uzhindoma-caption-text
																=recipe.name
															%p.uzhindoma-caption-text
																=recipe.description
									/ New line
									.uzhindoma-newline
								-if current_menu.category.purchasable?
									=form_tag new_order_path(menu_id: params[:menu_id], person_amount: params[:person_amount], dinner_amount: params[:dinner_amount], change: params[:change], add_dessert: params[:add_dessert]), method: 'get' do
										.col-xs-12.col-md-6.text-center.uzhin-doma-form
											%h4 
												Набор
												=current_menu.category.name
												%br
												=current_menu.daterange
												=hidden_field_tag :menu_id, current_menu.id
											.row
												%h6 Сколько ужинов?
												.row
													.payment-wrap.text-center.uzhin_rb_menus
														.col-md-4
															.payment
																.radio
																	%label
																		=radio_button_tag :menu_amount, 3
																		%span.radio-field
																		%span.h6.text-success Три
														.col-md-4
															.payment
																.radio.inline-block
																	%label
																		=radio_button_tag :menu_amount, 4
																		%span.radio-field
																		%span.h6.text-success Четыре
														.col-md-4
															.payment
																.radio.inline-block
																	%label
																		=radio_button_tag :menu_amount, 5, checked: true
																		%span.radio-field
																		%span.h6.text-success Все пять!

											.row
												%h6 Количество персон
												.row
													.payment-wrap.uzhin_rb_persons
														.col-md-6
															.payment.text-right
																.radio
																	%label
																		=radio_button_tag :person_amount, 2, checked: true
																		%span.radio-field
																		%span.h6.text-success Две
														.col-md-6
															.payment.text-left
																.radio.inline-block
																	%label
																		=radio_button_tag :person_amount, 4
																		%span.radio-field
																		%span.h6.text-success Четыре

											.row
												%h6
													="Заменить #{current_menu.change_from} на #{current_menu.change_to}?"
												.row
													.payment-wrap.text-center
														.col-md-6
															.payment.text-right
																.radio
																	%label
																		=radio_button_tag :change, true
																		%span.radio-field
																		%span.h6.text-success Да
														.col-md-6
															.payment.text-left
																.radio.inline-block
																	%label
																		=radio_button_tag :change, false, checked: true
																		%span.radio-field
																		%span.h6.text-success Нет
											.row
												%h6 Добавить десерт?
												.row
													.payment-wrap.text-center.uzhin_rb_dessert
														.col-md-6
															.payment.text-right
																.radio
																	%label
																		=radio_button_tag :add_dessert, @dessert_price
																		%span.radio-field
																		%span.h6.text-success Да
														.col-md-6
															.payment.text-left
																.radio.inline-block
																	%label
																		=radio_button_tag :add_dessert, 0, checked: true
																		%span.radio-field
																		%span.h6.text-success Нет
																
											.price-container
												%span.text-gray Стоимость:
												
												%span.h4#uzhin_price
													=render 'front/menus/show_price'
												%i.fa-rub
											=button_tag(type: "submit", class: "btn btn-success btn-sm") do
												%span.icon.icon-xs.fa-shopping-cart
												Заказать набор
												
											.blog-post.offset-5
												.badge
													%span Поделиться:
													%ul.list-inline
														%li
															%a.fa-facebook{:href => "#"}
														%li
															%a.fa-instagram{:href => "#"}
														%li
															%a.fa-vk{:href => "#"}

												.row.offset-4
													.col-xs-12
														%h4 Блюда данного меню
														.resp-tabs-container
															
															.text-left.fadeIn.animated
																.table-responsive
																	%table.table.table-hover.text-left
																		%tbody
																			-current_menu.recipes.each_with_index do |recipe, index|
																				%tr
																					%td.text-gray
																						="#{index+1}. #{recipe.name}"
																					-if current_menu.category.display_vital?
																						%td
																							="К/Б/Ж - #{recipe.calories}/#{recipe.carbohydrates}/#{recipe.fat}"
															.text-sm-left.fadeIn.animated
																%p.mt15
																	=current_menu.description
								-else
									.col-xs-12.col-md-6.text-center.uzhin-doma-form
										%h4 
											=current_menu.category.name.upcase
											текущей недели
															
										.price-container
											%span.text-gray Стоимость:
											
											%span.h4#uzhin_price
												=render 'front/menus/show_price'
											%i.fa-rub

											
										.blog-post.offset-5
											.badge
												%span Поделиться:
												%ul.list-inline
													%li
														%a.fa-facebook{:href => "#"}
													%li
														%a.fa-instagram{:href => "#"}
													%li
														%a.fa-vk{:href => "#"}

											.row.offset-4
												.col-xs-12
													%h4 Пальчики оближешь!
													.resp-tabs-container
														.text-sm-left.fadeIn.animated
															%p.mt15
																=current_menu.description
