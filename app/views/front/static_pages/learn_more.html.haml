%section.section.section-inset-1.bg-light
	.container
		%h2.text-center Наши поставщики
		%hr
			.row
				.col-md-6.col-xs-12
					%section
						
						%ul.marked-list.text-left
							%li
								Будте уверены в качестве!
							%li
								Только наисвежайшие продукты!
							%li
								Мы знаем своих поставщиков!
				.col-md-6.col-xs-12
					/ Owl Carousel
					.owl-carousel.owl-carousel-mod-1{"data-autoplay" => "true", "data-dots" => "true", "data-dots-each" => "1", "data-items" => "1", "data-lg-items" => "3", "data-loop" => "true", "data-margin" => "15", "data-xs-items" => "2", "data-sm-items" => "2", "data-xs-stage-padding" => "15"}
						.owl-item
							=image_tag "placeholder_images/partner-1.png" do
								=image_tag "placeholder_images/partner-2.png"
						.owl-item
							=image_tag "placeholder_images/partner-3.png" do
								=image_tag "placeholder_images/partner-4.png"
						.owl-item
							=image_tag "placeholder_images/partner-5.png" do
								=image_tag "placeholder_images/partner-6.png"

%section.section.section-inset-2
	.container
		%h2.text-center Индивидуальный подход
		%hr
			.row
				.col-md-6.col-xs-12
					=image_tag "placeholder_images/baby_face.jpg"
				.col-md-6.col-xs-12
					%section
						%ul.marked-list.text-left
							%li
								%a.text-base{:href => "#"} Рецепты подходят для детей
							%li
								%a.text-base{:href => "#"} Можно заменить мяси и аллергены
							%li
								%a.text-base{:href => "#"} Всегда подскажем, как готовить

%section.section.section-inset-1.bg-primary
	.container
		%h2.text-center зоны доставки
		%hr
			.row
				.col-lg-12
					%section
						%h6 Бесплатная доставка даже за МКАД!
				.col-lg-12
					.google-maps
						%iframe{:src => "https://www.google.com/maps/d/embed?mid=1XDErH9fQjyxgY_R7VakujiNprCc", frameborder: 0}
					/ #map{style: "position: static;"}
			=link_to "Заказать набор", dinner_index_path, class: 'btn btn-white btn-sm btn-min-width'



%section.section.section-inset-1.bg-light
	.container
		%h2.text-center Наша команда
		%hr
			.row
				.col-md-6.col-xs-12
					.row.clearleft-custom.flow-offset-1
						.container-fluid
							.isotope.offset-1.isotope-no-gutter.cobbles-gallery{"data-isotope-group" => "gallery", "data-isotope-layout" => "masonry", "data-lightbox" => "gallery"}

								-@employees.all.each_with_index do |employee, index|

									.thumbnail-gallery.isotope-item{"data-filter" => "type-1"}
										=link_to employee.image.url, data: {lightbox: "image"} do
											=image_tag employee.grab_cobbles(index)
											.caption
												.caption-wrapper
													%span.icon.icon-md.icon-white.fa-search-plus
													%h4.text-white
														=employee.name
													%p.text-white
														=employee.description
											
				.col-md-6.col-xs-12
					%section
						
						%ul.marked-list.text-left
							%li
								%a.text-base{:href => "#"} Профессионалы
							%li
								%a.text-base{:href => "#"} Мы любим свою работу
							%li
								%a.text-base{:href => "#"} Мы заботимся о каждой морковке
							%li
								%a.text-base{:href => "#"} Вы наши лучшие друзья
			.team_row
				.col-md-12
					%section
						=image_tag "backgrounds/team_hd.jpg"