-if request.fullpath == '/'
	%section
		.swiper-container.swiper-slider
			.jumbotron-mod-1.text-center
				%div
					%h1
						%small Готовьте без лишних хлопот
						%span.text-bold Ужин Дома
					%p набор продуктов для домашнего ужина
					.btn-group-variant
						=link_to 'Хочу набор', dinner_index_path, class: 'btn btn-success btn-sm'
			.swiper-wrapper
				.swiper-slide{"data-slide-bg" => asset_path("placeholder_images/slider-1.jpg")}
					.swiper-slide-caption
			/ Swiper Pagination
			/ .swiper-pagination
-else
	%section.relative.text-center
	.container
		.jumbotron.text-center
			%h1
				%small elements design
				%span.text-bold tabsorino & accordions


#myModal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
	.modal-dialog{:role => "document"}
		.modal-content
			.modal-header
				%button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
					%span{"aria-hidden" => "true"} &times;
				%h4#myModalLabel.modal-title Быстрый заказ
			.modal-body
				=render partial: 'front/orders/order_form'
			.modal-footer
				