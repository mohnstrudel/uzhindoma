/ recent orders table
.panel
  .panel-body.pn
    .table-responsive
      %table.table.admin-form.theme-warning.tc-checkbox-1.fs13
        %thead
          %tr.bg-light
            / %th.text-center Select
            %th Имя
            %th Эл.почта
            %th Телефон
            %th.text-right Статус
        %tbody
          -@users.each do |user|
            %tr
              %td.text-left
                =link_to "#{user.first_name} #{user.second_name}", edit_admin_user_path(user) 
              %td
                =user.email
              %td
                =user.phone
              %td.text-right
                .btn-group.text-right
                  %button.btn.btn-success.br2.btn-xs.fs12.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
                    Действия
                    %span.caret.ml5
                  %ul.dropdown-menu{:role => "menu"}
                    %li
                      =link_to 'Редактировать', edit_admin_user_path(user)
                    %li.divider
                    %li
                      =link_to 'Удалить', admin_user_path(user.id), method: :delete, data: {confirm: 'Действительно удалить?'}
  =will_paginate @users