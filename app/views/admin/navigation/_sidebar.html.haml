/ Start: Sidebar
%aside#sidebar_left.nano.nano-light.affix
  / Start: Sidebar Left Content
  .sidebar-left-content.nano-content
    / Start: Sidebar Header
    %header.sidebar-header
      / Sidebar Widget - Author
      .sidebar-widget.author-widget
        .media
          %a.media-left{:href => "#"}
            / %img.img-responsive{:src => "assets/img/avatars/3.jpg"}
          .media-body
            .media-links
              %a.sidebar-menu-toggle{:href => "#"} Пользовательское меню -
              %a{:href => "pages_login(alt).html"} Выйти
            .media-author Админ Админов
      / Sidebar Widget - Menu (slidedown)
      .sidebar-widget.menu-widget
        .row.text-center.mbn
          .col-xs-4
            %a.text-primary{"data-placement" => "top", "data-toggle" => "tooltip", :href => "dashboard.html", :title => "Dashboard"}
              %span.glyphicon.glyphicon-home
          .col-xs-4
            %a.text-info{"data-placement" => "top", "data-toggle" => "tooltip", :href => "pages_messages.html", :title => "Messages"}
              %span.glyphicon.glyphicon-inbox
          .col-xs-4
            %a.text-alert{"data-placement" => "top", "data-toggle" => "tooltip", :href => "pages_profile.html", :title => "Tasks"}
              %span.glyphicon.glyphicon-bell
          .col-xs-4
            %a.text-system{"data-placement" => "top", "data-toggle" => "tooltip", :href => "pages_timeline.html", :title => "Activity"}
              %span.fa.fa-desktop
          .col-xs-4
            %a.text-danger{"data-placement" => "top", "data-toggle" => "tooltip", :href => "pages_profile.html", :title => "Settings"}
              %span.fa.fa-gears
          .col-xs-4
            %a.text-warning{"data-placement" => "top", "data-toggle" => "tooltip", :href => "pages_gallery.html", :title => "Cron Jobs"}
              %span.fa.fa-flask
      / Sidebar Widget - Search (hidden)
      .sidebar-widget.search-widget.hidden
        .input-group
          %span.input-group-addon
            %i.fa.fa-search
          %input#sidebar-search.form-control{:placeholder => "Search...", :type => "text"}
    / End: Sidebar Header
    / Start: Sidebar Menu
    %ul.nav.sidebar-menu
      %li.sidebar-label.pt20 Управление
      %li
        =link_to admin_path do
          %span.fa.fa-calendar
          %span.sidebar-title Меню
      %li
        =link_to admin_recipes_path do
          %span.glyphicon.glyphicon-book
          %span.sidebar-title Рецепты
      %li
        =link_to admin_users_path do
          %span.glyphicon.glyphicon-home
          %span.sidebar-title Клиенты
      %li
        =link_to admin_orders_path do
          %span.fa.fa-columns
          %span.sidebar-title Заказы
      %li
        =link_to admin_categories_path do
          %span.glyphicon.glyphicon-fire
          %span.sidebar-title Настройки
      %li
        %a.accordion-toggle{:href => "#"}
          %span.glyphicon.glyphicon-check
          %span.sidebar-title Внутренние пользователи
          %span.caret
          

      %li.sidebar-label.pt25.pb10 User Stats
      %li.sidebar-stat
        %a.fs11{:href => "#projectOne"}
          %span.fa.fa-inbox.text-info
          %span.sidebar-title.text-muted Email Storage
          %span.pull-right.mr20.text-muted 35%
          .progress.progress-bar-xs.mh20.mb10
            .progress-bar.progress-bar-info{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "45", :role => "progressbar", :style => "width: 35%"}
              %span.sr-only 35% Complete
      %li.sidebar-stat
        %a.fs11{:href => "#projectOne"}
          %span.fa.fa-dropbox.text-warning
          %span.sidebar-title.text-muted Bandwidth
          %span.pull-right.mr20.text-muted 58%
          .progress.progress-bar-xs.mh20
            .progress-bar.progress-bar-warning{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "45", :role => "progressbar", :style => "width: 58%"}
              %span.sr-only 58% Complete
      / End: Sidebar Menu
    / End: Sidebar Left Content