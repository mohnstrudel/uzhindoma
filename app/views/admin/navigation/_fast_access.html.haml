/ Start: Topbar-Dropdown
#topbar-dropmenu.alt.topbar-menu-open{style: "display: block;"}
  .topbar-menu.row
    .col-xs-4.col-sm-2
      =link_to admin_recipes_path, method: :get, class: "metro-tile bg-primary light" do
        %span.glyphicon.glyphicon-inbox.text-muted
        %span.metro-title Рецепты
    .col-xs-4.col-sm-2
      =link_to admin_menus_path, method: :get, class: "metro-tile bg-success light" do
        %span.glyphicon.glyphicon-headphones.text-muted
        %span.metro-title Наборы
    .col-xs-4.col-sm-2
      =link_to admin_users_path, method: :get, class: "metro-tile bg-info light" do
        %span.glyphicon.glyphicon-user.text-muted
        %span.metro-title Пользователи
    .col-xs-4.col-sm-2
      =link_to admin_orders_path, method: :get, class: "metro-tile bg-system light" do
        %span.glyphicon.glyphicon-facetime-video.text-muted
        %span.metro-title Заказы
    .col-xs-4.col-sm-2
      =link_to admin_categories_path, method: :get, class: "metro-tile bg-warning light" do
        %span.fa.fa-gears.text-muted
        %span.metro-title Категории наборов
