$(document).ready(function(){
	$('.item').eq(0).addClass('active');
	// $('.btn').eq(0).addClass('active');

	$('#dinner_amount').on('click', 'a', function(e){
		e.preventDefault();
		$('#dinner_amount a').removeClass('btn-success');
		$(this).addClass('btn-success');
	});

	$('#person_amount').on('click', 'a', function(e){
		e.preventDefault();
		$('#person_amount a').removeClass('btn-success');
		$(this).addClass('btn-success');
		var price = $('#uzhin_price').html();
		console.log(price);
	});
});